generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  PENDING
  ACTIVE
  COMPLETED
  ON_HOLD
  CANCELLED
}
enum Role {
  Admin
  Manager
  Member
}

model Project {
  id             Int       @id @default(autoincrement())
  title          String
  description    String
  tasks          Json 
  members        Json 
  status         Status @default(PENDING)
  organisation   String
  startDate      DateTime
  dueDate        DateTime
  completionDate DateTime
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Task {
  id             Int       @id @default(autoincrement())
  title          String
  companyName    String
  description    String
  assignedToId   Int
  assignedTo     String
  status         Status    @default(PENDING)
  dueDate        String
  assignedDate   DateTime  @default(now())
  completionDate DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model organisation{
  id             Int       @id @default(autoincrement())
  companyName    String
  projects       Json
  category       String
}

model Users{
  id             Int       @id @default(autoincrement())
  name           String
  c_name         String    
  email          String    @unique
  password       String
  role           Role
  phone            String?   
  joiningDate      String?
  performanceRating Float    @default(0) 
  taskAssigned     Int       @default(0)
  taskCompleted    Int       @default(0)
  projectCompleted Int       @default(0)                 
  yearsOfExperience Int?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}
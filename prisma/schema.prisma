generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  PENDING
  ACTIVE
  COMPLETED
  ON_HOLD
  CANCELLED
}


model Project {
  id             Int       @id @default(autoincrement())
  title          String
  description    String
  tasks          Json 
  members        Json 
  status         Status @default(PENDING)
  organisation   String
  startDate      DateTime
  dueDate        DateTime
  completionDate DateTime
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Employee {
  id               Int       @id @default(autoincrement())
  name             String
  email            String    @unique
  phone            String
  joiningDate      DateTime 
  role             String 
  performanceRating Float    @default(0) 
  taskAssigned     Int       @default(0)
  taskCompleted    Int       @default(0)
  projectCompleted Int       @default(0)
  tasks            Json                 
  password         String
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}
model Task {
  id             Int       @id @default(autoincrement())
  title          String
  description    String
  assignedToId   Int
  assignedTo     String
  status         Status    @default(PENDING)
  dueDate        DateTime
  assignedDate   DateTime  @default(now())
  completionDate DateTime
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model organisation{
  id             Int       @id @default(autoincrement())
  companyName    String
  projects       Json
  category       String
}